<header>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar"
                        aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('sylius_shop_homepage') }}">
                    <img src="{{ asset("img/logo.png") }}" class="img-responsive">
                </a>
            </div>

            <div class="collapse navbar-collapse navbar-right" id="main-navbar">
                <div>
                    <ul class="nav navbar-nav">
                        <li class="{% if app.request.attributes.get('_route') == 'book_index' %}active{% endif %}">
                            <a href="">Accueil<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="{% if app.request.attributes.get('_route') == 'book_ourBooks' %}active{% endif %}">
                            <a href="">Nos livres</a>
                        </li>
                        <li class="{% if app.request.attributes.get('_route') == 'book_aboutUs' %}active{% endif %}">
                            <a href="">Être édité</a>
                        </li>
                        <li>
                            {% include 'SyliusShopBundle::/Cart/_widget.html.twig' %}
                        </li>

                            {% if is_granted('ROLE_USER') %}
                        <li>    <div class="item">{{ 'sylius.ui.hello'|trans }} {{ app.user.customer.fullName }}!</div>
                                <a href="{{ path('sylius_shop_account_dashboard') }}" class="item">{{ 'sylius.ui.my_account'|trans }}</a></li>
                        <li>    <a href="{{ path('sylius_shop_logout') }}" class="item sylius-logout-button">{{ 'sylius.ui.logout'|trans }}</a></li>
                            {% else %}
                        <li>    <a href="{{ path('sylius_shop_login') }}" class="item">{{ 'sylius.ui.login'|trans }}</a></li>
                        <li>    <a href="{{ path('sylius_shop_register') }}" class="item">{{ 'sylius.ui.register'|trans }}</a></li>
                            {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>