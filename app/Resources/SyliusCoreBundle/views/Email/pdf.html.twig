{% extends '@SyliusShop/Checkout/layout.html.twig' %}


{% block content %}
    {% include '@SyliusShop/Checkout/_header.html.twig' %}
    <div class="ui padded segment">

        <!-- '@SyliusShop/Checkout/Complete/_header.html.twig' -->
        <h1 class="ui header">
            <i class="circular cart icon"></i>
            <div class="content">
                {{ 'RÃ©capitulatif de votre commande'|trans }}
                <div class="sub header">
                    <div class="ui horizontal divided list">
                        <div class="item" id="sylius-order-currency-code">
                            {{ order.currencyCode }}
                        </div>
                        <div class="item" id="sylius-order-locale-name">
                            {{ order.localeCode }}{{ order.localeCode|locale }}
                        </div>
                    </div>
                </div>
            </div>
        </h1>

        <!--@SyliusShop/Checkout/Complete/_header.html.twig -->
        <div class="ui segment">
            <table class="ui very basic table" id="checkout-subtotal">
                <thead>
                <tr>
                    <th class="sylius-table-column-item">{{ 'sylius.ui.item'|trans }}</th>
                    <th class="sylius-table-column-qty">{{ 'sylius.ui.quantity'|trans }}</th>
                    <th class="sylius-table-column-subtotal">{{ 'sylius.ui.subtotal'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for item in order.items %}
                    <tr>
                        <td>{{ item.getVariant.product.name }}</td>
                        <td class="center aligned">
                            {{ item.quantity }}
                        </td>
                        <td id="item-{{ item.getVariant.product.slug }}-subtotal">{{ item.subtotal|sylius_price }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
    {{ dump(order) }}
    {{ dump(product) }}
    {{ dump(client) }}
    {{ dump(total) }}
{% endblock %}


